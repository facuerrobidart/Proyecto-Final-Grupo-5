<!DOCTYPE html>
<html>

<%- include('./../partials/head') %>
<Title>Login</Title>
<body>
<%- include('./../partials/header') %>
<div id="login" class="h-100 pb-5 pt-5">
    <div class="container containerLogin w-50">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-10">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <h3 class="text-center text-info">Login</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">Email:</label><br>
                            <input type="email" class="form-control" name="email" placeholder="tumail@proveedor.com" id="inputEmail">
                            <div>
                                <p class="inputError" id="parrafoErrorEmail"> Campo Obligatorio</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Contraseña:</label><br>
                            <input type="password" class="form-control" name="password" id="inputContrasena">
                            <div>
                                <p class="inputError" id="parrafoErrorContrasena"> Campo Obligatorio</p>
                            </div>
                            <% if ( locals.mensaje) {%>
                                <br>
                                <p style="color: red"> <%= locals.mensaje %> </p>
                            <% }%>
                        </div>
                        <div class="form-group">
                            <label for="remember-me" class="text-info"><span>Recordame</span> <span><input id="inputsChecbox" type="checkbox" name="recordarUsuario"></span></label><br>
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="Iniciar Sesión">
                        </div>
                        <div id="register-link" class="text-right">
                            <a href="/user/register" class="text-info">Registrate aqui</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./../partials/footer') %>
<script src="/js/loginValidaciones.js"></script>
</body>



</html>