              <i class="formulario__validacion-estado fas fa-times-circle" id="iconoEmail"></i>
              </div>
              <div>
                <p class="inputError" id="parrafoErrorEmail"> Campo Obligatorio</p>
              </div>
            </div>
            <div class="form-group">
              <label for="password">Contrase単a</label>
              <div class="input-formulario">
              <input type="password" class="form-control" name="password" id="inputContrasena">
              <i class="formulario__validacion-estado fas fa-times-circle" id="iconoContrasena"></i>
              </div>
              <div>
                <p class="inputError" id="parrafoErrorContrasena"> Campo Obligatorio</p>
              </div>
            </div>
            <div>
              <% if ( locals.mensaje) {%>
                <p> <%= locals.mensaje %> </p>
              <% }%>
            </div>
            <a href="recupContrase単a.html">多Olvidaste tu contrase単a?</a>
            <div>
              <label>
              <input id="inputsChecbox" type="checkbox" name="recordarUsuario">    Recordar Usuario
              </label>
            </div>

            <div class="BotonEnvio">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </main>
      <%- include('./../partials/footer') %>
    <script src="/js/loginValidaciones.js"></script>
  </body>

</html>