<!DOCTYPE html>
<html>

<%- include('./../partials/head') %>
<!--CSS PRODUCTO-->
<link rel="stylesheet" href="/css/producto.css" />
  <body>
    <%- include('./../partials/header') %>
    <main>
    <div class="container products-wrapper">
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8 contienneImg">
					<img src="/images/<%=producto.fotoProducto%>" alt="product image" class="product-detail-img imgProd">
					<p class="product-detail-description">
						<%=producto.caracteristicasProducto%>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%=producto.titulo%></h2>
						
							<p class="product-detail-price">
								$<%=producto.precio%>
							</p>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a class="waves-effect waves-light btn">COMPRAR</a>
                        <a class="waves-effect waves-light btn">AGREGAR AL CARRITO</a>

						<hr>
					</article>
				</div>
			</div>
		</div>
	</div>
    </main>
    <%- include('./../partials/footer') %>
  </body>

</html>